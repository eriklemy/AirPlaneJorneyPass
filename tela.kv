<MainWindow>:
    orientation : 'vertical'
    Image:
        source: 'images/logo.png'  
    BoxLayout:
        size_hint: (None, None)
        spacing: 1
        Button:
            size_hint   : (None,None)
            height      : 52
            width       : 171
            halign      : 'center'
            background_color: (0,0,0,1)
            border      : (16,16,16,16)
            text        : "Cadastrar"
            background_active: "images/Button.png"
            on_press    : root.manager.current = "second"
        Button:
            size_hint   : (None,None)
            height      : 52
            width       : 171       
            id          : btSair
            text        : 'Sair'
            background_color: (0,0,0,1)
            border      : (16,16,16,16)
            on_press    : root.sair()

